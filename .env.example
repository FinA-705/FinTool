# 环境变量配置文件模板
# 复制此文件为 .env 并设置实际的密钥和配置

# 应用环境
ENVIRONMENT=development  # development, testing, production

# 数据源API密钥
TUSHARE_TOKEN=your_tushare_token_here
TUSHARE_BASEURL=http://api.tushare.pro

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASEURL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic 配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASEURL=https://api.anthropic.com

# 数据库配置
DATABASE_URL=sqlite:///data/financial_agent.db
REDIS_URL=redis://localhost:6379/0

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# 外部服务配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Web应用配置
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8000
WEBAPP_DEBUG=false

# 缓存配置
CACHE_TYPE=sqlite  # sqlite, redis, memory
CACHE_EXPIRE_HOURS=24

# 回测配置
BACKTEST_DATA_PATH=data/backtest/
BACKTEST_RESULTS_PATH=results/backtest/

# 性能配置
MAX_WORKERS=4
REQUEST_TIMEOUT=30
BATCH_SIZE=100
